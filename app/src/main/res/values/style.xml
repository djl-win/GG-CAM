<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Full screen Dialog styleï¼Œfrom left to right -->
    <style name="FullScreenDialogStyleAndAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Dialog anim -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

</resources>